<div class="row justify-content-center mt-5">
  <div class="col-md-4">
    <div class="card">
      <div class="card-header text-center">
        <h2><%= t('.sign_in') %></h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "col-form-label" %><br />
            <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
          </div>
        
          <div class="field">
            <%= f.label :password, class: "col-form-label" %><br />
            <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="field text-right">
              <%= f.check_box :remember_me, class: "checkbox"  %>
              <%= f.label :remember_me, class: "col-form-label" %>
            </div>
          <% end %>
        
          <div class="actions text-right">
            <%= f.submit t('.sign_in'), class: "btn btn-success my-3" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>