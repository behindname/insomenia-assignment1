
<div class="container">
  <div class="row my-5 justify-content-center">
    <h1>게시판</h1>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="list-group">
        <% if @posts.present? %>
        <div class="list-group-item active">
          <div class="row text-center">
              <div class="col-md-4">제목</div>
              <div class="col-md-4">내용</div>
              <div class="col-md-4">작성자</div>
          </div>
        </div>
        <% else %>
        <div class="list-group-item disabled">
          <h3>게시물이 없습니다.</h3>
        </div>
        <% end %>
        <% @posts.each do |post| %>
          <a href="<%= post_path(post) %>" class="list-group-item list-group-item-action">
            <div class="row">
              <div class="col-md-4"><%= post.title %></div>
              <div class="col-md-4"><%= post.body %></div>
              <div class="col-md-4"><%= post.user.email %></div>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>
  <% if user_signed_in? %>
  <div class="row justify-content-end mt-3">
    <div class="col-md-auto">
      <%= link_to '새 글 작성', new_post_path, class: "btn btn-success" %>
    </div>
  </div>
  <% end %>

</div>


